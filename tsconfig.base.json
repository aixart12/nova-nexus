{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nova-nexus/common-models": ["libs/shared/common-models/src/index.ts"],
      "@nova-nexus/components": ["libs/shared/components/src/index.ts"],
      "@nova-nexus/components/server": ["libs/shared/components/src/server.ts"],
      "@nova-nexus/features": ["libs/features/src/index.ts"],
      "@nova-nexus/features/server": ["libs/features/src/server.ts"],
      "@nova-nexus/hooks": ["libs/shared/hooks/src/index.ts"],
      "@nova-nexus/library": ["libs/shared/library/src/index.ts"],
      "@nova-nexus/library/i18n": ["libs/shared/library/src/lib/i18n/client.ts"],
      "@nova-nexus/library/server": ["libs/shared/library/src/server.ts"],
      "@nova-nexus/locales": ["libs/shared/locales/src/index.ts"],
      "@nova-nexus/locales/server": ["libs/shared/locales/src/server.ts"],
      "@nova-nexus/theme": ["libs/shared/theme/src/index.ts"],
      "@nova-nexus/theme/server": ["libs/shared/theme/src/server.ts"],
      "@nova-nexus/types": ["libs/types/src/index.ts"],
      "@nova-nexus/types/i18next": ["libs/types/src/lib/i18next.d.ts"],
      "@nova-nexus/types/utilities": ["libs/types/src/lib/utilities.d.ts"]
    },
    "types": [
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts",
      "next",
      "@nx/next/typings/image.d.ts",
      "@nova-nexus/types/utilities",
      "@nova-nexus/types/i18next"
    ]
  },
  "exclude": ["node_modules", "tmp"]
}
